@inject NavigationManager NavManager

<BSNavbar IsExpand="true" IsDark="true" Color="Color.Dark">
        <BSNavbarBrand Href="/">12th Morning</BSNavbarBrand>
        <BSNav IsPills="true" Class="m-2" IsNavbar="true">
            <BSDropdown Class="mx-2">
                <BSButtonGroup>
                        <BSNavLink Class="btn btn-outline-info" href="/blog">
                            Blog Update
                        </BSNavLink>
                    <BSDropdownToggle IsSplit="true" @onclick="onclick" Color="Color.Info"></BSDropdownToggle>
                    <BSDropdownMenu @bind-IsOpen="@IsOpen">
                        <BSDropdownItem @onclick="onclick" Href="/route">all</BSDropdownItem>
                        <BSDropdownItem IsDivider="true" />
                        <BSDropdownItem @onclick="onclick" Href="/blog/dev">dev</BSDropdownItem>
                        <BSDropdownItem IsDivider="true" />
                        <BSDropdownItem @onclick="onclick" Href="/blog/personal">personal</BSDropdownItem>
                    </BSDropdownMenu>
                </BSButtonGroup>
            </BSDropdown>
            <BSNavItem Class="mx-2">
                <BSNavLink Class="btn btn-outline-info" href="/streamschedule">
                    Stream Schedule
                </BSNavLink>
            </BSNavItem>

            @if (Startup.IsDev) {
                <BSNavItem Class="mx-2">
                    <BSNavLink Class="btn btn-outline-info" href="/blogupdate">
                        Blog Update
                    </BSNavLink>
                </BSNavItem>
            }
        </BSNav>
    </BSNavbar>




@code {
    private string url;
    protected bool IsOpen { get; set; } = false;
    protected void onclick(MouseEventArgs e) {
        IsOpen = !IsOpen;
        StateHasChanged();
    }
}
